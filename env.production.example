# Production Environment Variables Template
# Copy this file to .env.production and fill in your values

# =============================================================================
# SLACK APP CONFIGURATION
# =============================================================================

# Bot User OAuth Token (from Slack App OAuth & Permissions)
SLACK_BOT_TOKEN=xoxb-your-bot-token-here

# Signing Secret (from Slack App Basic Information)
SLACK_SIGNING_SECRET=your-signing-secret-here

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# MongoDB Connection String
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/leave-notifications

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================

# Server Port (usually 3000 or set by hosting platform)
PORT=3000

# Environment (set to production)
NODE_ENV=production

# Use HTTP webhooks instead of Socket Mode (recommended for production)
USE_SOCKET_MODE=false

# =============================================================================
# OPTIONAL CONFIGURATION
# =============================================================================

# Default channel for notifications (optional)
# If not set, will use the channel where the app is installed
NOTIFICATION_CHANNEL=#leave-notifications

# Timezone for date calculations (optional, defaults to UTC)
TZ=UTC

# =============================================================================
# SECURITY (Production Only)
# =============================================================================

# Enable HTTPS certificate verification (production only)
# NODE_TLS_REJECT_UNAUTHORIZED=1

# =============================================================================
# DEVELOPMENT ONLY (Don't use in production)
# =============================================================================

# Socket Mode App Token (only needed for development)
# SLACK_APP_TOKEN=xapp-your-app-token-here

# Disable SSL verification (only for development)
# NODE_TLS_REJECT_UNAUTHORIZED=0 